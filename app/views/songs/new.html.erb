<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
  <br />

  <% 5.times do |index| %>
    <input type="text" name="song[note_contents][]" id = <%= "song_notes_#{index+1}" %>>
    <br/>
  <% end %>

  <%= f.submit %>
<% end %>
